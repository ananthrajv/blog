<div class="blog-masthead">
      <div class="container">
        <nav class="nav blog-nav">
          <a class="nav-link active" href="#">Home</a>
        </nav>
      </div>
    </div>

    <div class="blog-header">
      <div class="container">
        <h1 class="blog-title">The Rails Blog</h1>
        <p class="lead blog-description">The complete information about the Rails apllication starter .</p>
      </div>
    </div>

    

    <div class="blog-header">
      <div class="container">
        <button type="button" class="btn btn-primary btn-sm" id= "btn_id">Create Blog</button>
      </div>  
      <br>
      <div class="container create">
       
        <%= form_for(@post) do |f| %>
          <% if @post.errors.any? %>
            <div id="error_explanation">
              <h2>
                <%= pluralize(@post.errors.count, "error") %> prohibited
                this article from being saved:
              </h2>
              <ul>
                <% @post.errors.full_messages.each do |msg| %>
                  <li><%= msg %></li>
                <% end %>
              </ul>
            </div>
          <% end %>

          <div class="field">
            <%= f.label :title, { :class => 'type' } %><br>
            <%= f.text_field :title , :class => "form-control" %>
          </div>
          <div class="field">
            <%= f.label :body, { :class => 'type' } %><br>
            <%= f.text_area :body, :class => "form-control"%>
          </div>
          <div class="actions">
            <%= f.submit %>
          </div>
        <% end %>


      </div>
    </div>  

    <%= render 'content' %>


    <footer class="blog-footer">
     <!--  <p>Blog template built for <a href="#">Rails</a> by <a href="https://twitter.com/mdo">@mdo</a>.</p>
      <p> -->
        <a href="#">Back to top</a>
      </p>
    </footer>

</div>


<script>
  $('.create').hide();

  $("#btn_id").click(function(){
    $('.create').toggle();
  });
</script>