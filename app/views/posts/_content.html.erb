<div class="container">

      <div class="row">

        <div class="col-sm-8 blog-main">
          <% @posts.each do |post| %>
            <div class="blog-post">
              <h2 class="blog-post-title"><%= post.title %></h2>
              <p class="blog-post-meta"><%= post.created_at.strftime("%dth %B, %Y")%> </p>

              <p><%= post.body %></p>
            </div>
          <% end %>  

        </div>


      </div>

</div>